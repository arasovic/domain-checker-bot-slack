# Domain names to check (comma separated)
DOMAINS=example.com,example.org,ldap.example.com

# Days before expiration to start sending notifications
WARNING_DAYS=30

# Slack configuration
SLACK_TOKEN=xoxb-your-token-here
SLACK_CHANNEL=domain-notifications

# Check frequency (cron expression - default is every day at 9:00 AM)
CRON_SCHEDULE="0 9 * * *"

# Debug mode for more detailed logging
DEBUG=false

# Send notifications on errors
NOTIFY_ERRORS=true

# Use RDAP instead of WHOIS (recommended due to WHOIS rate limits)
USE_RDAP=true